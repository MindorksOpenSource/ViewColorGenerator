<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/parent"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/background"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_vibrant_dark_text"
                  android:id="@+id/backgroundText"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/backgroundTwo"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_vibrant_color_text"
                  android:id="@+id/backgroundTextTwo"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/backgroundThree"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_muted_dark_text"
                  android:id="@+id/backgroundTextThree"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/backgroundFour"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_muted_light_text"
                  android:id="@+id/backgroundTextFour"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/backgroundFive"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_vibrant_color_text"
                  android:id="@+id/backgroundTextFive"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/backgroundSix"
                  android:gravity="center"
                  android:layout_height="100dp">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/this_is_muted_color_text"
                  android:id="@+id/backgroundTextSix"
                  android:textStyle="bold"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>